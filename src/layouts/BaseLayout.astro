---
// Este layout agora contém o markup do Header e Footer diretamente.
// Não há mais importação de componentes Header e Footer como arquivos separados.
import '../styles/global.css'; // Estilos globais para todo o site (Tailwind CSS)

interface Props {
    title: string;
    description: string;
    image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const { title, description, image = '/blog-placeholder-1.jpg' } = Astro.props;

const year = new Date().getFullYear();
const whatsapp = "5532999998888"; // Seu número internacional (sem +)
---

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
    <link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700&display=swap" rel="stylesheet" />

    <link rel="canonical" href={canonicalURL} />

    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content="assistência técnica, informática, computadores, redes, servidores, manutenção, Divinésia, DivComp" />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

</head>
<body class="bg-gray-50 text-gray-900 min-h-screen flex flex-col">

<header class="w-full bg-white/95 backdrop-blur-sm shadow-lg sticky top-0 z-20">
    <div class="container mx-auto flex items-center justify-between px-6 py-4">
        <a href="/" class="flex items-center gap-3">
            <img src="/images/logo-div-comp.png" alt="DivComp Informática" class="h-14 w-auto" />
        </a>
        <nav class="flex gap-6 text-base font-semibold">
            <a href="/" class="text-gray-700 hover:text-yellow-600 transition duration-300 ease-in-out">Início</a>
            <a href="/servicos" class="text-gray-700 hover:text-yellow-600 transition duration-300 ease-in-out">Serviços</a>
            <a href="/sobre" class="text-gray-700 hover:text-yellow-600 transition duration-300 ease-in-out">Sobre</a>
            <a href="/faq" class="text-gray-700 hover:text-yellow-600 transition duration-300 ease-in-out">Dúvidas</a>
            <a href="/contato" class="text-gray-700 hover:text-yellow-600 transition duration-300 ease-in-out">Contato</a>
        </nav>
        <div class="hidden md:block">
            <a href={`https://wa.me/${whatsapp}`} target="_blank" rel="noopener" class="inline-flex items-center gap-2 bg-green-500 hover:bg-green-600 text-white font-bold px-5 py-2.5 rounded-lg shadow-md transition duration-300 ease-in-out">
                <iconify-icon icon="ic:baseline-whatsapp" width="24" class="inline" />
                WhatsApp
            </a>
        </div>
    </div>
</header>

<main class="flex-1 w-full">
    <slot />
</main>

<footer class="bg-gray-900 text-gray-300 py-10 mt-16">
    <div class="container mx-auto flex flex-col md:flex-row items-center justify-between gap-6 px-6">
        <div class="flex items-center gap-3">
            <img src="/images/logo-div-comp-bg-br.png" alt="Logo DivComp" class="h-14 w-auto" />
        </div>
        <div class="text-center text-sm md:text-left">
          <span>
            &copy; {year} DivComp Informática - Divinésia/MG<br />
            Soluções em informática, redes e servidores.<br />
            Todos os direitos reservados.
          </span>
        </div>
        <div class="flex gap-5 items-center">
            <a href={`https://wa.me/${whatsapp}`} target="_blank" rel="noopener" class="flex items-center gap-1.5 text-green-400 hover:text-green-500 transition duration-300 ease-in-out">
                <iconify-icon icon="ic:baseline-whatsapp" width="22" />
                WhatsApp
            </a>
            <a href="mailto:contato@divcomp.com.br" class="flex items-center gap-1.5 text-gray-300 hover:text-yellow-300 transition duration-300 ease-in-out">
                <iconify-icon icon="ic:baseline-email" width="22" />
                Email
            </a>
        </div>
    </div>
</footer>

</body>
</html>