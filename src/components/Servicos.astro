---
const servicos = [
    {
        icone: "mdi--monitor",
        titulo: "Manutenção de Computadores",
        desc: "Formatação, upgrades, remoção de vírus, instalação e configuração."
    },
    {
        icone: "mdi--wifi",
        titulo: "Redes e Internet",
        desc: "Soluções para Wi-Fi, cabeamento, roteadores e impressoras."
    },
    {
        icone: "mdi--server",
        titulo: "Servidores Linux e Windows",
        desc: "Manutenção, backup, segurança e otimização para empresas."
    },
    {
        icone: "mdi--cloud-upload",
        titulo: "Backup & Proteção de Dados",
        desc: "Backup local, nuvem e recuperação de dados."
    }
];
---
<section id="servicos" class="max-w-screen-xl mx-auto px-6 py-14 md:py-20 scroll-mt-24">
    <h2 class="text-3xl md:text-4xl font-bold text-center text-green-700 mb-10">
        Serviços que resolvem seu problema
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {servicos.map(s => (
                <div class="bg-white rounded-xl shadow-lg hover:shadow-xl p-7 flex flex-col gap-3 items-start border-l-4 border-green-600 transition duration-300">
                    <span class={`icon-[${s.icone}] w-8 h-8 text-green-600`}></span>
                    <h3 class="font-bold text-xl">{s.titulo}</h3>
                    <p class="text-gray-700">{s.desc}</p>
                </div>
        ))}
    </div>
</section>
