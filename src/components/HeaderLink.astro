---
const { href } = Astro.props;
const active = Astro.url.pathname === href;
---
<a
	href={href}
	class:list={[
		"px-4 py-2 rounded transition font-medium",
		active ? "text-green-700 underline underline-offset-4" : "text-gray-800 hover:text-green-700"
	]}
	aria-current={active ? "page" : undefined}
>
	<slot />
</a>
