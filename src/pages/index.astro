// --- DADOS A SEREM PREENCHIDOS ---
const emailContato = "seu-email@dominio.com"; // PREENCHER
const formsubmitAction = `https://formsubmit.co/${emailContato}`; // PREENCHER
const instagramLink = "https://www.instagram.com/seu-usuario"; // PREENCHER
const facebookLink = "https://www.facebook.com/sua-pagina"; // PREENCHER
const urlAvaliarGoogle = "https://g.page/r/YOUR_PLACE_ID/review"; // PREENCHER com o link real

const avaliacoes = [
	{
		nome: "Maria Korsgaard",
		foto: "/images/cliente1.jpg",
		data: "2023-03-15",
		texto: "O atendimento foi impecável! Recomendo demais, resolveram meu problema e deram total atenção.",
		estrelas: 5
	},
	{
		nome: "Maren Calzoni",
		foto: "/images/cliente2.jpg",
		data: "2023-03-12",
		texto: "Serviço rápido, muito profissional. Explicou tudo com paciência. Empresa confiável.",
		estrelas: 5
	},
	{
		nome: "Davis Dokidis",
		foto: "/images/cliente3.jpg",
		data: "2023-03-08",
		texto: "Fiz curso e também usei o suporte. Nota máxima. Recomendo a todos da região!",
		estrelas: 5
	},
];
---

<html lang="pt-BR" class="scroll-smooth">
<head>
	<BaseHead
		title="DivComp Soluções | Especialista em TI, Cursos e Manutenção"
		description="Leadpage oficial da DivComp Soluções: manutenção de computadores, TI, cursos, recuperação de dados e avaliações reais. Atendimento em Divinésia/MG e região."
	/>
</head>
<body class="bg-white text-gray-900 font-sans antialiased">
<Header/>

<main>
	<section class="relative w-full bg-white py-20 md:py-28 scroll-mt-24">
		<div class="absolute inset-0 -z-10 overflow-hidden">
			<svg class="absolute left-[50%] top-0 h-[100%] w-[100%] -translate-x-1/2" viewBox="0 0 1024 1024" aria-hidden="true">
				<circle cx="512" cy="512" r="512" fill="url(#gradient-radial-hero)" fill-opacity="0.2"></circle>
				<defs>
					<radialGradient id="gradient-radial-hero">
						<stop stop-color="#4ade80"></stop>
						<stop offset="1" stop-color="#065f46"></stop>
					</radialGradient>
				</defs>
			</svg>
		</div>

		<div class="max-w-4xl mx-auto flex flex-col items-center text-center gap-6 px-6">
        <span class="block text-base md:text-lg font-semibold text-green-700">
            Suporte Técnico e Treinamentos
        </span>

			<h1 class="text-5xl sm:text-6xl lg:text-7xl font-extrabold tracking-tight text-balance bg-gradient-to-r from-green-600 to-emerald-800 bg-clip-text text-transparent">
				+20 Anos de Experiência Real em TI
			</h1>

			<p class="text-lg md:text-xl text-gray-700 mt-2 max-w-2xl">
				Soluções definitivas para seu computador, rede e tecnologia. Fale com quem realmente entende do assunto e resolve seu problema.
			</p>


		</div>
	</section>

	<section class="relative z-10">
		<div class="max-w-4xl mx-auto px-6 -mt-16">
			<div class="bg-white rounded-2xl shadow-xl border border-green-100/80 p-6 md:p-8">
				<div class="grid grid-cols-1 md:grid-cols-12 items-center gap-6 md:gap-4">
					<div class="md:col-span-2 flex justify-center">
						<span class="icon-[mdi--face-agent] text-7xl text-green-600"></span>
					</div>
					<div class="md:col-span-6 text-center md:text-left">
						<h3 class="text-xl md:text-2xl font-bold text-gray-800">Precisa de uma solução rápida?</h3>
						<p class="text-gray-600 mt-1">Sem robôs ou menus complicados. Fale diretamente com um especialista.</p>
					</div>
					<div class="md:col-span-4 flex justify-center md:justify-end">
						<a href={`https://wa.me/${whatsapp}`} target="_blank" rel="noopener"
						   class="inline-flex items-center gap-3 bg-green-600 hover:bg-green-700 text-white font-bold px-6 py-3 rounded-lg shadow-lg transition-transform hover:scale-105 w-full md:w-auto justify-center">
							<span class="icon-[mdi--whatsapp] w-6 h-6"></span>
							<span>{telefone}</span>
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section id="servicos" class="w-full py-16 md:py-24 bg-slate-50 border-b border-green-100">
		<div class="max-w-5xl mx-auto px-6 md:px-10">
			<h2 class="text-center text-base/7 font-semibold text-green-600">Nossos Serviços</h2>
			<p class="mx-auto mt-2 max-w-2xl text-center text-4xl font-semibold tracking-tight text-balance text-gray-900 sm:text-5xl">
				Soluções completas para suas necessidades de tecnologia
			</p>
			<div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-8">
				<div class="bg-white rounded-xl shadow p-8 flex flex-col items-center gap-3 border border-green-100 text-center">
					<span class="icon-[mdi--monitor] text-4xl text-green-600 mb-3"></span>
					<h3 class="text-xl font-semibold text-gray-900">Manutenção de Computadores</h3>
					<p class="text-gray-700">Formatar, limpar, otimizar, instalar e recuperar dados de notebook e PC.</p>
				</div>
				<div class="bg-white rounded-xl shadow p-8 flex flex-col items-center gap-3 border border-green-100 text-center">
					<span class="icon-[mdi--server] text-4xl text-green-700 mb-3"></span>
					<h3 class="text-xl font-semibold text-gray-900">TI Empresarial</h3>
					<p class="text-gray-700">Redes, servidores, backup, internet, impressoras e suporte para seu negócio.</p>
				</div>
				<div class="bg-white rounded-xl shadow p-8 flex flex-col items-center gap-3 border border-green-100 text-center">
					<span class="icon-[ph--chalkboard-teacher-bold] text-4xl text-green-700 mb-3"></span>
					<h3 class="text-xl font-semibold text-gray-900">Cursos e Aulas</h3>
					<p class="text-gray-700">Aulas de informática, Office e tecnologia. Capacitação para todas as idades.</p>
				</div>
			</div>
		</div>
	</section>

	<section id="avaliacoes-google" class="w-full py-16 md:py-24 bg-white border-b border-green-100">
		<div class="max-w-3xl mx-auto px-4 flex flex-col items-center">
			<h2 class="text-center text-base/7 font-semibold text-green-600">Depoimentos</h2>
			<p class="mx-auto mt-2 max-w-2xl text-center text-4xl font-semibold tracking-tight text-balance text-gray-900 sm:text-5xl">
				O que nossos clientes dizem sobre nós
			</p>
			<div id="carousel-avaliacoes" class="w-full relative mt-12">
				{avaliacoes.map((a, idx) => (
					<div class:list={["carousel-slide", { hidden: idx !== 0 }]} id={`slide-${idx}`}>
						<div class="bg-white border border-green-200 rounded-2xl shadow-md flex flex-col items-center text-center p-8 min-h-[290px]">
							<img src={a.foto} alt={`Foto de ${a.nome}`} class="w-16 h-16 rounded-full object-cover border-2 border-green-200 mb-3" loading="lazy"/>
							<span class="font-semibold text-gray-900">{a.nome}</span>
							<span class="text-sm text-gray-500 mb-1">{new Date(a.data + 'T00:00:00').toLocaleDateString('pt-BR')}</span>
							<div class="flex justify-center gap-0.5 mb-1">
								{[...Array(a.estrelas)].map(() => <span class="icon-[mdi--star] text-yellow-400 w-5 h-5"></span>)}
							</div>
							<p class="text-gray-700 text-base mt-1 mb-2">"{a.texto}"</p>
							<span class="flex items-center gap-1 justify-center mt-auto">
                                <img src="/images/google-icon.png" alt="Logo do Google" class="w-5 h-5"/>
                                <span class="text-xs text-gray-600">Avaliação via Google</span>
                            </span>
						</div>
					</div>
				))}
				<div class="flex justify-between items-center mt-6">
					<button id="carousel-prev" class="bg-green-100 hover:bg-green-200 text-green-700 font-bold p-3 rounded-full shadow transition" aria-label="Avaliação anterior">
						<span class="icon-[mdi--arrow-left] w-6 h-6"></span>
					</button>
					<button id="carousel-next" class="bg-green-100 hover:bg-green-200 text-green-700 font-bold p-3 rounded-full shadow transition" aria-label="Próxima avaliação">
						<span class="icon-[mdi--arrow-right] w-6 h-6"></span>
					</button>
				</div>
			</div>
		</div>
	</section>

	<section id="sobre" class="w-full py-16 md:py-24 bg-gradient-to-br from-green-50 via-white to-green-100">
		<div class="max-w-3xl mx-auto px-6 flex flex-col items-center text-center">

			<div class="mb-8 inline-block rounded-full p-1.5 bg-[conic-gradient(from_180deg_at_50%_50%,#EA4335_0deg,#FBBC05_90deg,#34A853_180deg,#4285F4_270deg,#EA4335_360deg)]">
				<img
					class="h-32 w-32 rounded-full object-cover border-4 border-white"
					src="/images/raimundo-coelho.png"  alt="Foto do especialista"
					loading="lazy"
				/>
			</div>

			<div class="flex flex-col gap-4">
				<h2 class="text-center text-base/7 font-semibold text-green-600">Nossa História</h2>
				<p class="mx-auto mt-2 max-w-2xl text-center text-4xl font-semibold tracking-tight text-balance text-gray-900 sm:text-5xl">
					Mais de 20 anos de experiência e confiança
				</p>
				<p class="text-lg text-gray-700 mt-4 max-w-2xl mx-auto">
					A DivComp oferece manutenção, suporte e capacitação tecnológica com atendimento personalizado, ágil e transparente. Nossa missão é solucionar seu problema de verdade, com a excelência de quem tem décadas de experiência.
				</p>
			</div>
		</div>
	</section>

	<section id="contato" class="w-full py-16 md:py-24 bg-white">
		<div class="max-w-3xl mx-auto px-6 flex flex-col gap-8 items-center">
			<h2 class="text-center text-base/7 font-semibold text-green-600">Fale Conosco</h2>
			<p class="mx-auto mt-2 max-w-2xl text-center text-4xl font-semibold tracking-tight text-balance text-gray-900 sm:text-5xl">
				Pronto para começar?
			</p>
			<form action={formsubmitAction} method="POST" class="w-full flex flex-col gap-4 mt-6 max-w-xl mx-auto">
				<input required type="text" name="nome" placeholder="Seu nome" class="w-full border rounded-lg px-4 py-3 text-lg focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-green-500"/>
				<input required type="email" name="email" placeholder="Seu e-mail" class="w-full border rounded-lg px-4 py-3 text-lg focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-green-500"/>
				<textarea required name="mensagem" rows="4" placeholder="Como podemos ajudar?" class="w-full border rounded-lg px-4 py-3 text-lg focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-green-500"></textarea>
				<button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-bold px-8 py-3 rounded-lg shadow-lg transition text-lg">Enviar Mensagem</button>
			</form>
			<div class="flex flex-col gap-2 items-center mt-6">
				<span class="font-semibold text-gray-700">Ou se preferir, clique direto:</span>
				<div class="flex gap-3 mt-1 flex-wrap justify-center">
					<a href={`https://wa.me/${whatsapp}`} target="_blank" rel="noopener" class="inline-flex items-center gap-1.5 px-4 py-2 rounded-full bg-green-100 text-green-800 font-semibold hover:bg-green-200 transition"><span class="icon-[mdi--whatsapp] w-5 h-5"></span> WhatsApp</a>
					<a href={`mailto:${emailContato}`} class="inline-flex items-center gap-1.5 px-4 py-2 rounded-full bg-blue-100 text-blue-800 font-semibold hover:bg-blue-200 transition"><span class="icon-[mdi--email] w-5 h-5"></span> E-mail</a>
					<a href={instagramLink} target="_blank" rel="noopener" class="inline-flex items-center gap-1.5 px-4 py-2 rounded-full bg-pink-100 text-pink-700 font-semibold hover:bg-pink-200 transition"><span class="icon-[mdi--instagram] w-5 h-5"></span> Instagram</a>
					<a href={facebookLink} target="_blank" rel="noopener" class="inline-flex items-center gap-1.5 px-4 py-2 rounded-full bg-blue-50 text-blue-800 font-semibold hover:bg-blue-100 transition"><span class="icon-[mdi--facebook] w-5 h-5"></span> Facebook</a>
				</div>
			</div>
		</div>
	</section>
</main>
<Footer/>

<script>
	const carousel = document.getElementById('carousel-avaliacoes');
	if (carousel) {
		let current = 0;
		const slides = carousel.querySelectorAll('.carousel-slide');
		const prevButton = document.getElementById('carousel-prev');
		const nextButton = document.getElementById('carousel-next');

		const updateCarousel = () => {
			slides.forEach((slide, index) => {
				slide.classList.toggle('hidden', index !== current);
			});
		};

		if (prevButton && nextButton && slides.length > 1) {
			prevButton.onclick = () => {
				current = (current === 0) ? slides.length - 1 : current - 1;
				updateCarousel();
			};

			nextButton.onclick = () => {
				current = (current === slides.length - 1) ? 0 : current + 1;
				updateCarousel();
			};
		} else if (slides.length <= 1) {
			if (prevButton) prevButton.style.display = 'none';
			if (nextButton) nextButton.style.display = 'none';
		}
	}
</script>

</body>
</html>