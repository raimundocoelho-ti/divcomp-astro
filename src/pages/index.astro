---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import Hero from '../components/Hero.astro';
import Servicos from '../components/Servicos.astro';
import Sobre from '../components/Sobre.astro';
import Duvidas from '../components/Duvidas.astro';
import Contato from '../components/Contato.astro';

const title = "DivComp Soluções | TI, Manutenção, Aulas e Programação";
const description = "A sua solução completa em TI, manutenção, redes, cursos de informática, programação e consultoria. Atendimento humano e profissional para Divinésia/MG e região.";
---

<html lang="pt-BR" class="scroll-smooth">
<head>
	<BaseHead title={title} description={description} />
</head>
<body class="bg-white text-gray-900 font-sans antialiased">
<Header />
<main>
	<Hero />
	<Servicos />
	<Sobre />
	<Duvidas />
	<Contato />
</main>
<Footer />
</body>
</html>
